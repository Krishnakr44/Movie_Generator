# Copy to .env and fill values.

# MongoDB
MONGODB_URI=mongodb://localhost:27017/fictionmovie

# Auth (required for login/register/protected routes)
JWT_SECRET=your_min_32_char_secret_here_use_openssl_rand_hex_32
JWT_EXPIRES_IN=7d
APP_URL=http://localhost:3000

# AI Providers (use at least one; Gemini preferred, OpenAI fallback)
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: Gemini model (default: gemini-2.5-flash; use if default is not found)
# GEMINI_MODEL=gemini-2.5-flash
OPENAI_API_KEY=your_openai_api_key_here

# Optional: rate limit (requests per minute per IP for story generation)
STORY_RATE_LIMIT_PER_MIN=10
